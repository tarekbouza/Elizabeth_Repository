<style>
    .stars-container {
        position: absolute;
        inset: 0;
        overflow: hidden;
    }

    /* Static stars using absolute positioning */
    .star {
        position: absolute;
        width: 2px;
        height: 2px;
        background-color: white;
        border-radius: 50%;
        opacity: 0.8;
    }
</style>

